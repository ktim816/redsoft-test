mixin header()
  +b.HEADER.header&attributes(attributes)
    .container.header__content
      +e.logo
        +e.A(href='#').logo-link
          +e.IMG(src='./assets/images/header-logo.png').logo-img
      +e.right
        +navigation.__nav
          +nav-item('#', 'О сервисе')
          +nav-item('#', 'Функции')
          +nav-item('#', 'Возможности')
          +nav-item('#', 'Партнеры')
        +button('Оставить заявку')(type='button')._transparent.header__button
    block
